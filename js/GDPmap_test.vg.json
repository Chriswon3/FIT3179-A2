{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 400,
    "projection":{"type": "equalEarth"},
    "data": {
      "url": "https://raw.githubusercontent.com/Chriswon3/FIT3179-A2/main/data/gdpdata.csv"
    },
    
    
    "transform": [
      {
        "lookup": "country",
        "from": {
          "data": {
            "url":"https://raw.githubusercontent.com/Chriswon3/FIT3179-A2/main/js/ne_110m.topojson",
                    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
          },
          "key": "properties.NAME",
          "fields": ["properties", "gdp"]
        }
      },
      {"filter": "datum.year==Year1"} 
    ],

    "params": [
      {
        "name": "Year1",
        "value": 2019,
        "bind": {
          "input": "range",
          "min": 1985,
          "max": 2030,
          "step": 1,
          "name": "Select the year:"
        }
      }
    ],
    
    "mark": "geoshape",
    "encoding": {
      "color": {"field": "gdp", "type": "quantitative"},
      "tooltip": [
        {"field": "properties.NAME", "type": "nominal", "title": "country"},
        {"field": "gdp", "type": "quantitative"}
      ]
    }
  }