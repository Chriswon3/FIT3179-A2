{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A packed bubble chart representing Average IQ and GDP per Capita.",
  
  "data": {
    "url": "data/gdpiq.csv"
  },
  "mark": "circle",
  "encoding": {
    "x": {
      "field": "Country", 
      "type": "ordinal", 
      "axis": null
    },
    "y": {
      "field": "Country", 
      "type": "ordinal", 
      "axis": null
    },
    "size": {
      "field": "Average IQ", 
      "type": "quantitative",
      "scale": {
        "range": [0, 2000]
      },
      "legend": {
        "title": "Average IQ"
      }
    },
    "color": {
      "field": "GDP Per Capita", 
      "type": "quantitative",
      "scale": {
        "scheme": "viridis"
      },
      "legend": {
        "title": "GDP Per Capita"
      }
    },
    "tooltip": [
      {"field": "Country", "type": "nominal"},
      {"field": "Average IQ", "type": "quantitative"},
      {"field": "GDP Per Capita", "type": "quantitative"}
    ]
  },
  "view": {
    "stroke": null
  }
}